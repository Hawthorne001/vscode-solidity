{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es2017"
        ],
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "rootDir": ".",
        "allowJs": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
